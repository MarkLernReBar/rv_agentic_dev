[Unit]
Description=RV Agentic Heartbeat Monitor
Documentation=https://github.com/your-org/rv-agentic
After=network.target postgresql.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/rv-agentic

# Environment
EnvironmentFile=/home/ubuntu/rv-agentic/.env.production
Environment="PATH=/home/ubuntu/rv-agentic/.venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONUNBUFFERED=1"

# Execution
ExecStart=/home/ubuntu/rv-agentic/.venv/bin/python -m rv_agentic.workers.heartbeat_monitor

# Restart policy - aggressive for critical monitoring
Restart=always
RestartSec=10
StartLimitInterval=200
StartLimitBurst=10

# Resource limits
MemoryMax=512M
CPUQuota=50%

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=rv-heartbeat

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
